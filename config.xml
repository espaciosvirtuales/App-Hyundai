<?xml version='1.0' encoding='utf-8'?>
<widget id="mx.com.grupoaldorf.hyundai.app" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hyundai Aldorf</name>
    <description>
        Applicaci√≥n de las agencias Hyundai en Monterrey y Tapmico del Grupo Aldorf
    </description>
    <author email="luis@tadeo.me" href="http://tadeo.me/">
        Espacios Virtuales &amp; Luis Tadeo
    </author>
    <icon density="mdpi" height="48" platform="android" src="www/img/icon.png" width="48" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#002c5f" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="DisallowOverscroll" value="true" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="~4.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
